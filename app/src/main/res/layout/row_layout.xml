<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/image_list_bullet" 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/star"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/image_list_item_lost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/magnifier"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/text_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_list_bullet"
        android:layout_toRightOf="@id/image_list_bullet"
        android:layout_toEndOf="@id/image_list_bullet"
        android:layout_toLeftOf="@id/image_list_item_lost"
        android:layout_toStartOf="@id/image_list_item_lost"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/hello_world"
        android:textColor="#000"
        android:textSize="25sp" />
    
</RelativeLayout>
